{
  "name": "@placer/api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start:dev": "nest start --watch",
    "prisma:generate": "yarn prisma generate",
    "prisma:migrate": "yarn prisma migrate dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "checkcode": "yarn typecheck && yarn format && yarn lint:fix"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "2.0.2",
    "@nestjs/bullmq": "11.0.4",
    "@nestjs/common": "11.1.11",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.1.11",
    "@nestjs/passport": "11.0.5",
    "@nestjs/platform-express": "11.1.11",
    "@nestjs/serve-static": "5.0.3",
    "@nestjs/swagger": "11.2.4",
    "@prisma/client": "6.13.0",
    "add": "^2.0.6",
    "bullmq": "5.56.8",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.2",
    "dayjs": "1.11.13",
    "dotenv": "17.2.1",
    "dotenv-expand": "12.0.2",
    "ejs": "3.1.10",
    "juice": "11.0.3",
    "keycloak-connect": "26.1.1",
    "nest-keycloak-connect": "2.0.0-alpha.2",
    "nestjs-telegraf": "2.9.1",
    "nodemailer": "7.0.12",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.2",
    "sharp": "0.34.4",
    "telegraf": "4.16.3",
    "uuid": "11.0.5",
    "yarn": "^1.22.22"
  },
  "devDependencies": {
    "@nestjs/cli": "11.0.8",
    "@nestjs/schematics": "11.0.5",
    "@nestjs/testing": "11.1.5",
    "@types/dotenv": "8.2.3",
    "@types/express": "5.0.3",
    "@types/jest": "30.0.0",
    "@types/multer": "2.0.0",
    "@types/node": "24.1.0",
    "@types/nodemailer": "7.0.4",
    "@types/supertest": "6.0.3",
    "jest": "30.0.5",
    "prisma": "6.13.0",
    "source-map-support": "0.5.21",
    "supertest": "7.1.4",
    "ts-jest": "29.4.0",
    "tsconfig-paths": "4.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
