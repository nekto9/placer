html
  box-sizing border-box
  height 100%
  scroll-behavior smooth

  *, *:before, *:after
    box-sizing inherit

body
  position relative
  margin 0 auto
  min-height 100%
  height auto !important
  height 100%
  text-rendering optimizeLegibility
  -webkit-font-smoothing subpixel-antialiased

.overlay--loading
  z-index 100
