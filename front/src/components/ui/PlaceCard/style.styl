.place-card
  display flex
  flex-wrap nowrap
  justify-content stretch

  &__cover
    flex-shrink 0
    overflow hidden
    margin 8px
    width 60px
    height 60px
    border-radius 6px

    img
      width 100%
      height 100%

  &__content
    flex-grow 0
    flex-shrink 1
    padding 8px 8px 8px 0

  &__name
    margin 0 0 4px

  &__description
    font-size 12px

.g-card_type_action
  box-shadow none

  &.g-card_clickable:hover
    box-shadow none