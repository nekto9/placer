.upload-preview
  &__item
    position relative
    padding 8px
    border 1px solid #f0f0f0
    font-size: 0

    &--added
      border 1px solid #49cc90

    &--deleted
      border 1px solid #f93e3e

  &__preview
    width 100px
    height 100px

  &__stub
    width 100px
    height 100px
    background: #f5f6f7

  &__image
    width 100%
    height 100%
    object-fit cover

  &__buttons
    position absolute
    z-index 2
    bottom 16px
    left 50%
    transform: translateX(-50%)

    &--center
      bottom 50%
      transform: translate(-50%, 50%)