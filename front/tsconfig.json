{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "keycloak-js": ["../node_modules/keycloak-js/lib/keycloak.d.ts"]
    },
    "types": ["jest", "node", "@testing-library/jest-dom"]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
