{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,

    "paths": {
      "@/*": ["./src/*"],
      "keycloak-js": ["../node_modules/keycloak-js/lib/keycloak.d.ts"]
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
